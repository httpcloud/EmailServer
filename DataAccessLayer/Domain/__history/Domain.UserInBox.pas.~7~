unit Domain.UserInBox;

interface

type
  MailStatus = (eNoRead, // ÐÂÓÊ¼þ
    eAlreadyReaded, // ÒÑ¶Á
    eAlreadySent, // ÒÑÉ¾³ý
    eDeleted, // ÒÑÉ¾³ý
    eWaitForSend, // ´ý·¢ËÍ£¬²Ý¸åÏä
    eTrashMail // À¬»øÓÊ¼þ
    );

  TUserMailInBoxRec = class
    UserEMail: WideString;
    MailID: WideString;
    //RecvTime: TDateTime;
    FromAddr: WideString;
    Recipient: WideString;
    CC: WideString;
