unit Domain.UserInBox;

interface

type
  MailStatus = (eNoRead, // 新邮件
    eAlreadyReaded, // 已读
    eAlreadySent, // 已删除
    eDeleted, // 已删除
    eWaitForSend, // 待发送，草稿箱
    eTrashMail // 垃圾邮件
    );

  TUserMailInBoxRec = class
    UserEMail: WideString;
    MailID: WideString;
    RecvTime: TDateTime;
    FromAddr: WideString;
    Recipient: WideString;
    CC: WideString;
    BCC: WideString;
    Subject: WideString;
    AttchFileName: WideString;
    Body: WideString;
    OrginalContent: WideString;
    Status: MailStatus;
  end;

implementation

end.
